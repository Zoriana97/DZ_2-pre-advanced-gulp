    .footer-wrap.d-flex.row
      .footer-wrap__logo.col-xl-3.col-lg-3.col-md-3.col-sm-3.col.col-12 Dreamshare
      .footer-wrap__list.col-xl-3.col-lg-3.col-md-3.col-sm-3.col.col-12
        .footer-wrap__list_subhead Company
        ul.footer-wrap__list_block
          li.footer-wrap__list_block_item
            a.footer-wrap__list_block_item_link(href='#') About
          li.footer-wrap__list_block_item
            a.footer-wrap__list_block_item_link(href='#') Contact
          li.footer-wrap__list_block_item
            a.footer-wrap__list_block_item_link(href='#') Press
          li.footer-wrap__list_block_item
            a.footer-wrap__list_block_item_link(href='#') Blog
          li.footer-wrap__list_block_item
            a.footer-wrap__list_block_item_link(href='#') Terms and Privacy
          li.footer-wrap__list_block_item
            a.footer-wrap__list_block_item_link(href='#') Help
      .footer-wrap__list.col-xl-3.col-lg-3.col-md-3.col-sm-3.col.col-12
